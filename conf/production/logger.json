{
  "appenders": [{
    "type": "file",
    "filename": "./log/appcore.log",
    "pattern": "-yyyy-MM-dd-hh",
    "category": "logger"
  }, {
    "type": "file",
    "filename": "./log/appcore.log.wf",
    "pattern": "-yyyy-MM-dd-hh",
    "category": "logger2"
  }, {
    "type": "file",
    "filename": "./log/appcore.log.rig",
    "category": "rig",
    "layout": {
      "type": "pattern",
      "pattern": "%m"
    }
  }],
  "replaceConsole": true,
  "levels": {
    "logger": "info",
    "logger2": "warn",
    "rig": "info"
  }
}