    h1= title
  
  link(rel="stylesheet", href= "/widget/slider/idangerous.swiper.css")
  style.
    .x-cpt-slider {
      position: relative;
    }
    .swiper-slide h3{
      position: absolute;
      bottom: 0;
      width: 100%;
      height: 40px;
      padding-left: 10px;
      line-height: 40px;
      background: rgba(0,0,0,.5);
      color: #fff;
    }
    .pagination {
      position: absolute;
      z-index: 20;
      right: 10px;
      bottom: 10px;
    }
    .swiper-pagination-switch {
      display: inline-block;
      box-shadow: 0px 1px 2px #555 inset;
      margin: 0 3px;
      width: 8px;
      height: 8px;
      border-radius: 8px;
      background: #222;
      margin-right: 5px;
      opacity: 0.8;
      border: 1px solid #fff;
      cursor: pointer;
    }
    .swiper-active-switch {
      background: #fff;
    }
    .swiper-slide img{
      width: 100%;
      height: 100%;
    }
