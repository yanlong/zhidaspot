div.x-cpt-hasBottomBar(data-bbar='bbar1' data-tel=app.contact.tel data-qq=app.contact.qq)
  
  - headerHided = false
  - headerHideBack = false
  - headerTitle = '公司简介'
  include ../utils/header
  
  link(rel="stylesheet", href= "/widget/slider/idangerous.swiper.css")
  style.
    .x-cpt-slider {
      position: relative;
    }
    .swiper-slide h3{
      position: absolute;
      bottom: 0;
      width: 100%;
      height: 40px;
      padding-left: 10px;
      line-height: 40px;
      background: rgba(0,0,0,.3);
      color: #fff;
    }
    .pagination {
      position: absolute;
      z-index: 20;
      right: 10px;
      bottom: 10px;
    }
    .swiper-pagination-bullet {
      display: inline-block;
      margin: 0 3px;
      width: 8px;
      height: 8px;
      border-radius: 8px;
      background: #999;
      margin-right: 5px;
      opacity: 0.8;
      cursor: pointer;
    }
    .swiper-pagination-bullet-active {
      background: #fff;
    }
    .swiper-slide img{
      width: 100%;
      height: 100%;
    }

  .x-cpt-slider
    .swiper-container
      .swiper-wrapper
        each url in app.company.images
          .swiper-slide

            img(data-src=url class="swiper-lazy")
            .swiper-lazy-preloader
            //- p= 222222
            //- h3= '隔热膜'
    .pagination
  
  .x-cpt-article
    h2 公司地址
    p= app.company.address
    
    -var address = app.company.address;
    include ../utils/map
            
    h2 主营产品或服务
    p!= app.company.main
    h2 简介
    p!= app.company.intro
      
  include ../utils/hasScript


    



